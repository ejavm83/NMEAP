{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "references": [
    {
      "path": "./packages/nmea-core"
    },
    {
      "path": "./apps/nmea-react-demo"
    }
  ],
  "files": [],
  "include": [],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
}
